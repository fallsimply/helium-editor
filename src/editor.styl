div[helium][editor]
	background:#0008
	padding: 1rem
	border-radius: .25rem

	div[toolbar]
		button, details[dropdown] > :nth-child(2) 
			background: #0cf
			border-radius: 0.25em
		button 
			min-width: 2em
			width: max-content
			height: 2em
			font-size: 1em
			line-height: 1em
			padding: 0.5em
			border: 0
			color: #fff
			box-sizing: border-box
			font-feature-settings: "cv08"
			&[admin] 
				background: #c0f
				width: max-content
		button:focus, [dropdown]:focus-within > summary > button 
			outline: none
			border: 0.2em solid #000c
			padding: 0.3em

	div[contenteditable] 
		padding: 1rem
		margin-top: 0.5rem
		border-radius: 0.25em
		background: #fff
		&:focus
			padding: .8rem
			border: .2rem solid #000c
			outline: none
		p 
			margin: 0.25rem 0
